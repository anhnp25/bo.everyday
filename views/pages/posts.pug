extends ../index.pug

include ../components/modal.pug

append meta 
    title BP - Create your Blog

append links
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css")
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css')

append js
    script(src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js") 
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js')
    script(src="https://cdn.tailwindcss.com") 
    script(src="/js/tailwind.js") 
    script(src="/js/editor.js") 
    script.
        const listImg = !{listImg};
        const modalImgBtnId = "galleries";
        const okImgBtnId = "okImgBtnId";
        const cancelImgBtnId = "cancelImgBtnId";
    script(src="/js/posts.js") 

append content 
    h1.text-3xl.font-bold.my-3 New Post

    div
        +modal(modalImgBtnId, okImgBtnId, cancelImgBtnId)
            .flex.flex-wrap 
                each val in JSON.parse(listImg)
                    div(class="galleries-image w-1/2 sm:w-1/3 md:w-1/4 p-2 cursor-pointer" title="/" + val)
                        img(src="/images/" + val, alt="alt")
                        .text-center #{val}

    textarea#editor